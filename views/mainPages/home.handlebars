  <style>
    .p {
      font-size: 16px;
      font-weight: bold;
      color: #fff;
      margin-bottom: 10px;
    }
    .container-t {
      background-color: #333;
      padding: 20px;
      border-radius: 10px;
      color: #fff;
      margin: 10px;
    }
    .container-t h2 {
      color: #ffcc00;
    }
    .container-t ul {
      list-style-type: none;
      padding: 0;
    }
    .container-t li {
      margin-bottom: 10px;
    }
    .container-t code {
      background-color: #444;
      padding: 2px 5px;
      border-radius: 5px;
    }
    form#feedbackForm {
      margin: 0 auto;
      border-radius: 8px;
    }
    form#feedbackForm label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }
    form#feedbackForm textarea {
      width: 100%;
      height: 150px;
      padding: 10px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 16px;
      resize: vertical;
    }
    #responseMessage {
