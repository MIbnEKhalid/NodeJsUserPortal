<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Donation Submission</title>
        {% include "../../templates/header.njk" %}
        <style>
            .onp {
                background-color: #e8f0fe;
                padding: 10px;
                border-left: 5px solid #2196F3;
                margin: 20px auto;
                max-width: 600px;
                border-radius: 5px;
                color: #333;
            }
        </style>
        <style>
            .admin {
                color: goldenrod;
            }
            * {
                box-sizing: border-box;
            }
            .profile-container {
                margin: 30px auto;
                width: 100%;
                max-width: 500px;
                padding: 20px;
                border: 1px solid #333;
                border-radius: 10px;
                background: linear-gradient(145deg, #292929, #343434);
                color: #fff;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
                transition: transform 0.3s, box-shadow 0.3s;
            }
            .profile-header h2 {
                text-align: center;
                font-size: 24px;
                color: #f39c12;
                margin-bottom: 15px;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
            .profile-form {
                display: flex;
                flex-direction: column;
                gap: 15px;
            }
            .form-group {
                display: flex;
                flex-direction: column;
            }
            .form-group label {
                font-size: 16px;
                color: #ddd;
                margin-bottom: 5px;
            }
            .form-group input,
            .form-group textarea {
                padding: 10px;
                font-size: 16px;
                border: 1px solid #555;
                border-radius: 5px;
                background-color: #1e1e1e;
                color: #fff;
                transition: border-color 0.3s, box-shadow 0.3s;
            }
            .form-group textarea {
                text-align: left;
                resize: none;
                text-transform: none;
            }
            .form-group input[readonly],
            .form-group textarea {
                background-color: #292929;
                color: #fff;
            }
            .form-group input:focus,
            .form-group textarea:focus {
                border-color: #f39c12;
                box-shadow: 0 0 5px #f39c12;
                outline: none;
            }
            .badge {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 8px 12px;
                font-size: 14px;
                font-weight: bold;
                border-radius: 5px;
                text-transform: uppercase;
                text-align: center;
            }
            .info-icon-j {
                margin-left: 8px;
                background: none;
                border: none;
                color: #fff;
                font-size: 16px;
                cursor: pointer;
                padding: 0;
                text-decoration: underline;
                transition: color 0.3s;
            }
            .info-icon:hover {
                color: #dfdfdf;
            }
            .demo {
                background-color: rgb(180, 50, 40);
                color: #fff;
            }
            .guest {
                background-color: #e74c3c;
                color: #fff;
            }
            .normal-user {
                background-color: #95a5a6;
                color: #fff;
            }
            .super-admin {
                background-color: purple;
                color: #fff;
            }
            .normal-admin {
                background-color: #27ae60;
                color: #fff;
            }
            .tooltip {
                display: none;
                position: absolute;
                background-color: #333;
                color: #fff;
                padding: 8px;
                border-radius: 5px;
                font-size: 12px;
                margin-left: 30%;
                z-index: 10;
                width: 180px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            }
            .note {
                font-size: 13px;
                color: #e74c3c;
                margin-top: 5px;
            }
            @media(max-width: 600px) {
                .profile-container {
                    padding: 15px;
                }
                .tooltip {
                    width: 150px;
                }
                .profile-header h2 {
                    font-size: 20px;
                }
                .form-group label {
                    font-size: 14px;
                }
                .form-group input,
                .form-group textarea {
                    font-size: 14px;
                }
                .buttons {
                    font-size: 14px;
                }
            }
            @keyframes spin {
                0% {
                    transform: rotate(0deg);
                }
                100% {
                    transform: rotate(360deg);
                }
            }
            .profile-container {
                display: none;
            }
            .spinner {
                width: 50px;
                height: 50px;
                border: 6px solid #f3f3f3;
                border-top: 6px solid #f39c12;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }
            .loader {
                display: flex;
                justify-content: center;
                align-items: center;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        </style>
        <script>
            function validateForm(event) {
                event.preventDefault();
                const donorName = document
                    .getElementById('donorName')
                    .value
                    .trim();
                const phone = document
                    .getElementById('phone')
                    .value
                    .trim();
                const amount = document
                    .getElementById('amount')
                    .value
                    .trim();
                const paymentProof = document.getElementById('paymentProof').files;
                const email = document
                    .getElementById('email')
                    .value
                    .trim();
                if (! donorName) {
                    alert('Please enter your name.');
                    event.preventDefault();
                    return false;
                }
                const phonePattern = /^\+923\d{9}$/;
                if (! phone || ! phonePattern.test(phone)) {
                    alert('Please enter a valid WhatsApp/Phone number in the format +92XXXXXXXXXX.');
                    event.preventDefault();
                    return false;
                }
                if (email) {
                    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (! emailPattern.test(email)) {
                        alert('Please enter a valid email address.');
                        event.preventDefault();
                        return false;
                    }
                }
                if (! amount || isNaN(amount)) {
                    alert('Please enter a valid donation amount.');
                    event.preventDefault();
                    return false;
                }
                if (paymentProof.length === 0) {
                    alert('Please upload your payment proof.');
                    event.preventDefault();
                    return false;
                }
                console.log('Form is valid.');
                return true;
            }
        </script>
    </head>
    <body>
        <section class="about">
            <div class="content">
                <div class="profile-container" style="display: block;">
                    <div class="profile-header">
                        <h2>Donation Submission</h2>
                    </div>
                    <div class="profile-details">
                        <form class="profile-form" id="donationForm">
                            <p class="onp">
                                Please make your donation using JazzCash with the following account details:<br>
                                <strong>Number:</strong>
                                03264552255<br>
                                <strong>Name:</strong>
                                Muhammad Bin Khalid
                            </p>
                            <div class="form-group">
                                <label for="donorName">
                                    <strong>Donor Name *</strong>
                                </label>
                                <input type="text" id="donorName" name="donorName" required>
                            </div>
                            <div class="form-group">
                                <label for="email">
                                    <strong>Email (optional)</strong>
                                </label>
                                <input type="email" id="email" name="email">
                            </div>
                            <div class="form-group">
                                <label for="phone">
                                    <strong>WhatsApp/Phone Number *</strong>
                                </label>
                                <input type="text" id="phone" name="phone" required>
                            </div>
                            <div class="form-group">
                                <label for="amount">
                                    <strong>Donation Amount *</strong>
                                </label>
                                <input type="text" id="amount" name="amount" required>
                            </div>
                            <div class="form-group">
                                <label for="paymentProof">
                                    <strong>Upload Payment Proof *</strong>
                                </label>
                                <input type="file" id="paymentProof" name="paymentProof" accept="image/*,application/pdf" required>
                            </div>
                            <div class="form-group">
                                <button class="buttons" style="font-size: 20px;" type="submit">Submit</button>
                            </div>
                        </form>
                        <script>
                            document.getElementById("donationForm").addEventListener("submit", async function (event) {
                                event.preventDefault();
                                // Validate the form first
                                if (! validateForm(event)) 
                                    return;
                                
                                const form = event.target;
                                const formData = new FormData(form);
                                try {
                                    const response = await fetch("/post/donations/submit", {
                                        method: "POST",
                                        body: formData
                                    });
                                    const result = await response.json();
                                    if (response.ok) {
                                        alert("Donation submitted successfully!");
                                        form.reset();
                                    } else {
                                        alert(result.message);
                                    }
                                } catch (error) {
                                    console.error("Error during form submission:", error);
                                    alert("Submission failed");
                                }
                            });
                        </script>
                    </div>
                </div>
            </div>
        </section>
    </body>
    {% include "../../templates/footer.njk" %}
</html>